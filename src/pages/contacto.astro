---
// src/pages/contacto.astro
import Button from '../components/atoms/Button.astro';
import Heading from '../components/atoms/Heading.astro';
import MapFrame from '../components/atoms/MapFrame.astro';
import { siteData } from '../data/siteData';
import Layout from '../layouts/Layout.astro';

const { info, social } = siteData;
---

<Layout title="Contacto | Beauty Salon Template">
  <header class="bg-pink-50 px-4 py-20 text-center">
    <Heading tagName="h1" size="xl" align="center" className="mb-4">
      Estamos para <span class="italic text-pink-500">Asesorarte</span>
    </Heading>
    <p class="mx-auto max-w-2xl text-lg text-glam-gray">Reserva tu cita o consúltanos tus dudas.</p>
  </header>

  <section class="container mx-auto px-4 py-16">
    <div
      class="grid grid-cols-1 gap-12 overflow-hidden rounded-[2.5rem] border border-pink-100 bg-white shadow-sm lg:grid-cols-2"
    >
      <div class="flex flex-col justify-center p-8 md:p-12">
        <Heading tagName="h3" size="md" color="navy" className="mb-6">Envíanos un mensaje</Heading>

        <form id="contact-form" class="mb-8 space-y-4">
          <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
            <input
              id="nombre"
              name="nombre"
              type="text"
              placeholder="Tu Nombre"
              aria-label="Tu Nombre"
              required
              class="w-full rounded-lg border border-pink-100 bg-pink-50/50 px-4 py-3 text-glam-gray placeholder:text-glam-gray/50 focus:border-pink-300 focus:outline-none"
            />
            <input
              id="telefono"
              name="telefono"
              type="tel"
              placeholder="Tu Teléfono (Opcional)"
              aria-label="Tu Teléfono"
              class="w-full rounded-lg border border-pink-100 bg-pink-50/50 px-4 py-3 text-glam-gray placeholder:text-glam-gray/50 focus:border-pink-300 focus:outline-none"
            />
          </div>
          <textarea
            id="mensaje"
            name="mensaje"
            rows="4"
            placeholder="¿Qué servicio te interesa?"
            aria-label="Mensaje o consulta"
            required
            class="w-full rounded-lg border border-pink-100 bg-pink-50/50 px-4 py-3 text-glam-gray placeholder:text-glam-gray/50 focus:border-pink-300 focus:outline-none"
          ></textarea>

          <Button type="submit" variant="primary" className="w-full cursor-pointer md:w-auto">
            Enviar a WhatsApp
          </Button>
        </form>

        <div class="space-y-8 border-t border-gray-100 pt-8">
          {/* 1. TELÉFONO */}
          <div>
            <span class="block font-bold text-glam-navy">WhatsApp / Teléfono</span>
            <a
              href={info.whatsappLink}
              class="text-lg font-semibold text-pink-500 decoration-2 underline-offset-4 hover:underline"
            >
              {info.phone}
            </a>
          </div>

          {/* 2. MEDIOS DE PAGO */}
          <div>
            <span class="mb-3 block font-bold text-glam-navy">Medios de Pago</span>
            <div class="flex flex-wrap gap-3">
              {/* Badge Efectivo */}
              <div
                class="flex items-center gap-2 rounded-xl border border-green-100 bg-green-50 px-3 py-2 text-green-700"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  aria-hidden="true"
                  ><rect width="20" height="12" x="2" y="6" rx="2"></rect><circle
                    cx="12"
                    cy="12"
                    r="2"></circle><path d="M6 12h.01M18 12h.01"></path></svg
                >
                <span class="text-sm font-semibold">Efectivo</span>
              </div>

              {/* Badge Mercado Pago */}
              <div
                class="flex items-center gap-2 rounded-xl border border-blue-100 bg-blue-50 px-3 py-2 text-blue-700"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  aria-hidden="true"
                  ><path d="M3 11h18"></path><rect width="18" height="14" x="3" y="5" rx="2" ry="2"
                  ></rect><path d="M7 15h.01M11 15h2"></path></svg
                >
                <span class="text-sm font-semibold">Mercado Pago</span>
              </div>
            </div>
            <p class="mt-2 text-xs italic text-gray-400">
              * Aceptamos todas las tarjetas de crédito y débito.
            </p>
          </div>

          {/* 3. REDES SOCIALES */}
          <div>
            <span class="mb-3 block font-bold text-glam-navy">Redes Sociales</span>
            <div class="flex gap-4">
              <a
                href={social.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="group flex h-12 w-12 items-center justify-center rounded-full border border-gray-100 bg-white shadow-sm transition-all duration-300 hover:scale-110 hover:border-pink-200 hover:shadow-md"
                aria-label="Instagram"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-gray-400 transition-colors duration-300 group-hover:text-pink-600"
                  ><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path
                    d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line
                    x1="17.5"
                    y1="6.5"
                    x2="17.51"
                    y2="6.5"></line></svg
                >
              </a>

              <a
                href={social.facebook}
                target="_blank"
                rel="noopener noreferrer"
                class="group flex h-12 w-12 items-center justify-center rounded-full border border-gray-100 bg-white shadow-sm transition-all duration-300 hover:scale-110 hover:border-blue-200 hover:shadow-md"
                aria-label="Facebook"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-gray-400 transition-colors duration-300 group-hover:text-blue-600"
                  ><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
                  ></path></svg
                >
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="relative h-full min-h-[400px] bg-gray-100">
        <MapFrame className="h-full w-full rounded-none border-0 shadow-none" />
      </div>
    </div>
  </section>
</Layout>

<script define:vars={{ whatsappLink: info.whatsappLink }} is:inline>
  // ✅ Usamos 'astro:page-load' para que el formulario funcione al navegar
  document.addEventListener('astro:page-load', () => {
    const form = document.getElementById('contact-form');

    if (form) {
      // Removemos listeners previos si existen para evitar duplicados
      const newForm = form.cloneNode(true);
      form.parentNode.replaceChild(newForm, form);

      newForm.addEventListener('submit', (e) => {
        e.preventDefault();

        const nombreInput = document.getElementById('nombre');
        const telefonoInput = document.getElementById('telefono');
        const mensajeInput = document.getElementById('mensaje');

        // Protección simple contra nulos
        if (!nombreInput || !mensajeInput) return;

        const nombre = nombreInput.value;
        const telefono = telefonoInput ? telefonoInput.value.trim() : '';
        const mensaje = mensajeInput.value;

        // 1. Parte obligatoria del mensaje
        let textoFinal = `Hola Norma! Soy ${nombre}. %0A%0A*Consulta:* ${mensaje}`;

        // 2. Condición: Solo agregamos la línea de teléfono si el usuario escribió algo
        if (telefono !== '') {
          textoFinal += ` %0A%0A*Mi teléfono:* ${telefono}`;
        }

        // 3. Armar link final
        const urlFinal = `${whatsappLink}?text=${textoFinal}`;

        // 4. Abrir
        window.open(urlFinal, '_blank');
      });
    }
  });
</script>
