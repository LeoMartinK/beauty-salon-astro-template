---
import Button from 'src/components/atoms/Button.astro';
import Heading from 'src/components/atoms/Heading.astro';
import MapFrame from 'src/components/atoms/MapFrame.astro';
import { siteData } from 'src/data/siteData';

const { info, schedule } = siteData;
---

<section id="contacto" class="container mx-auto px-4 py-20">
  <div class="rounded-[2.5rem] border border-pink-100 bg-white p-8 shadow-sm md:p-12">
    <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
      <div class="space-y-8">
        <div>
          <span class="mb-2 block text-xs font-bold uppercase tracking-widest text-pink-500"
            >Visítanos</span
          >
          <Heading tagName="h2" size="lg" color="navy">
            Tu momento de <br /> desconexión
          </Heading>
        </div>

        <div class="space-y-6">
          <div class="flex items-start gap-4">
            <div class="rounded-full bg-pastel-mint p-3 text-glam-navy">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
              >
            </div>
            <div>
              <h4 class="font-serif text-xl font-bold text-glam-navy">Dirección</h4>
              <p class="text-glam-gray">{info.address}</p>
              <a
                href={info.mapUrl}
                target="_blank"
                class="mt-1 inline-block text-sm font-semibold text-pink-500 hover:underline"
                >Ver en Google Maps &rarr;</a
              >
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="rounded-full bg-pastel-mint p-3 text-glam-navy">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg
              >
            </div>
            <div>
              <h4 class="font-serif text-xl font-bold text-glam-navy">Horarios</h4>
              <ul class="mt-1 space-y-1 text-sm text-glam-gray">
                {
                  schedule.map((item) => (
                    <li>
                      <span class="font-semibold">{item.day}:</span> {item.hours}
                    </li>
                  ))
                }
              </ul>
            </div>
          </div>
        </div>

        <div class="pt-4">
          <Button
            href={info.whatsappLink}
            variant="primary"
            className="w-full shadow-xl shadow-pink-200 md:w-auto"
          >
            Agendar Cita por WhatsApp
          </Button>
        </div>
      </div>

      <div class="h-full min-h-[400px]">
        <MapFrame
          className="h-full w-full rotate-1 transition-transform duration-500 hover:rotate-0"
        />
      </div>
    </div>
  </div>
</section>
