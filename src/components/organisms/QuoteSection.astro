---
import Heading from 'src/components/atoms/Heading.astro';
import { siteData } from 'src/data/siteData';

const { quote } = siteData;
---

<section class="relative flex items-center justify-center overflow-hidden bg-pink-100/30 py-20">
  <span
    class="absolute -top-20 left-10 select-none font-serif text-[20rem] leading-none text-pink-200/40 md:left-1/4"
    >â€œ</span
  >

  <div class="container relative z-10 mx-auto max-w-4xl px-6 text-center">
    <Heading
      tagName="h2"
      size="lg"
      className="mb-6 font-medium italic leading-relaxed text-glam-taupe"
    >
      "{quote.text}"
    </Heading>

    <div class="flex items-center justify-center gap-4">
      <span class="h-px w-12 bg-glam-navy/30"></span>
      <span class="text-sm font-bold uppercase tracking-[0.2em] text-glam-navy">
        {quote.author}
      </span>
      <span class="h-px w-12 bg-glam-navy/30"></span>
    </div>
  </div>
</section>
