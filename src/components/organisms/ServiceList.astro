---
// src/components/organisms/ServiceList.astro
import Heading from '../atoms/Heading.astro';

interface Props {
  category: string;
  items: {
    name: string;
    price: string;
    description?: string;
  }[];
}

const { category, items } = Astro.props;
---

<div class="mb-12 break-inside-avoid">
  <div class="mb-6 flex items-center gap-4">
    <Heading tagName="h3" size="md" color="navy">{category}</Heading>
    <div class="h-px flex-grow bg-pink-300 opacity-50"></div>
  </div>

  <ul class="space-y-5">
    {
      items.map((item) => (
        <li class="group">
          <div class="flex w-full items-end">
            <span class="relative top-1 shrink-0 font-serif text-lg font-bold leading-none text-glam-navy">
              {item.name}
            </span>

            <div class="mx-2 mb-1.5 flex-grow border-b-2 border-dotted border-glam-taupe/40" />

            <span class="relative top-1 shrink-0 whitespace-nowrap text-lg font-bold text-glam-taupe">
              {item.price}
            </span>
          </div>

          {item.description && (
            <p class="mt-1.5 max-w-[90%] text-sm italic leading-snug text-glam-gray">
              {item.description}
            </p>
          )}
        </li>
      ))
    }
  </ul>
</div>
