---
interface Props {
  tagName?: 'h1' | 'h2' | 'h3' | 'h4'; // Permitimos elegir la etiqueta semántica
  size?: 'xl' | 'lg' | 'md' | 'sm'; // Tamaños predefinidos
  color?: 'navy' | 'dark' | 'pink' | 'white';
  align?: 'left' | 'center' | 'right';
  className?: string;
}

const { tagName = 'h2', size = 'md', color = 'navy', align = 'left', className = '' } = Astro.props;

// Definimos la etiqueta HTML dinámica (h1, h2...)
const Tag = tagName;

// Mapeo de estilos según props
const sizes = {
  xl: 'text-5xl md:text-7xl leading-tight', // Hero
  lg: 'text-4xl md:text-5xl', // Títulos de sección
  md: 'text-3xl md:text-4xl', // Subtítulos
  sm: 'text-xl md:text-2xl', // Títulos de cards
};

const colors = {
  navy: 'text-glam-navy',
  dark: 'text-glam-dark',
  pink: 'text-pink-500', // Usamos el 500 para contraste
  white: 'text-white',
};

const aligns = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right',
};
---

<Tag
  class:list={[
    'font-serif font-bold tracking-wide', // Estilos base fijos (Playfair Display)
    sizes[size],
    colors[color],
    aligns[align],
    className,
  ]}
>
  <slot />
</Tag>
