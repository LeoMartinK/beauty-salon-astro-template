---
// src/components/organisms/Hero.astro
import { siteData } from '../../data/siteData'; // Asegúrate que la ruta sea correcta o usa 'src/data/siteData'
import Button from '../atoms/Button.astro';
import Heading from '../atoms/Heading.astro';

const { info, promo } = siteData;
---

<section class="container mx-auto px-4 py-12 md:py-20">
  <div class="grid auto-rows-[minmax(200px,auto)] grid-cols-1 gap-6 md:grid-cols-12">
    <div
      class="group relative flex flex-col items-start justify-center overflow-hidden rounded-3xl bg-pastel-mint p-8 shadow-sm md:col-span-8 md:row-span-2 md:p-12"
    >
      <div
        class="absolute right-0 top-0 h-64 w-64 -translate-y-1/2 translate-x-1/2 rounded-full bg-pink-100 opacity-50 blur-3xl"
      >
      </div>

      <span class="relative z-10 mb-4 text-xs font-bold uppercase tracking-[0.2em] text-glam-taupe">
        {info.subtitle}
      </span>

      <Heading tagName="h1" size="xl" className="relative z-10 mb-6 leading-tight">
        Resalta tu belleza <br />
        <span class="italic text-pink-500">natural y única</span>
      </Heading>

      <p class="relative z-10 mb-8 max-w-xl text-lg leading-relaxed text-glam-gray">
        {info.description} Disfruta de una experiencia de peluquería premium en un ambiente relajado y
        profesional.
      </p>

      <div class="relative z-10 flex flex-wrap gap-4">
        <Button href="/servicios">Ver Servicios</Button>
        <Button variant="outline" href={info.whatsappLink}>Reservar Cita</Button>
      </div>
    </div>

    <div
      class="flex flex-col items-center justify-center rounded-3xl bg-pink-200 p-8 text-center shadow-sm transition-transform duration-300 hover:scale-[1.02] md:col-span-4"
    >
      {
        promo.active && (
          <>
            <h3 class="mb-2 font-serif text-xl text-glam-navy">PROMOCIÓN</h3>
            <p class="my-2 font-serif text-6xl font-bold text-glam-navy">{promo.value}</p>
            <p class="text-sm uppercase tracking-widest text-glam-gray">{promo.text}</p>
            <span class="mt-4 rounded-full bg-white/50 px-3 py-1 text-xs text-glam-taupe">
              {promo.condition}
            </span>
          </>
        )
      }
    </div>

    <div
      class="flex flex-col justify-center rounded-3xl bg-water-400 p-8 text-white shadow-sm md:col-span-4"
    >
      <h3 class="mb-6 border-b border-white/30 pb-4 font-serif text-3xl">Especialidades</h3>
      <ul class="space-y-3 text-lg font-light">
        <li class="flex items-center gap-3">
          <span class="text-pink-200">✦</span> Cortes Unisex
        </li>
        <li class="flex items-center gap-3">
          <span class="text-pink-200">✦</span> Colorimetría
        </li>
        <li class="flex items-center gap-3">
          <span class="text-pink-200">✦</span> Tratamientos
        </li>
      </ul>
    </div>

    <div class="group relative h-64 overflow-hidden rounded-3xl shadow-md md:col-span-12 md:h-80">
      <img
        src="https://images.unsplash.com/photo-1562322140-8baeececf3df?ixlib=rb-4.0.3&auto=format&fit=crop&w=2069&q=80"
        alt="Interior Peluquería"
        class="h-full w-full object-cover transition-transform duration-700 group-hover:scale-105"
      />
      <div
        class="absolute inset-0 flex items-center bg-gradient-to-r from-glam-navy/80 to-transparent px-8 md:px-12"
      >
        <div class="max-w-lg text-white">
          <h3 class="mb-2 font-serif text-3xl md:text-4xl">Corte para Él & Ella</h3>
          <p class="text-gray-200">Técnicas modernas adaptadas a tu estilo de vida.</p>
        </div>
      </div>
    </div>
  </div>
</section>
