---
// src/components/atoms/Button.astro
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg'; // <--- ¡AQUÍ ESTÁ LA MAGIA! Agregamos el tipado
  className?: string;
  type?: 'button' | 'submit' | 'reset';
}

const {
  href,
  variant = 'primary',
  size = 'md', // Por defecto será mediano
  className = '',
  type = 'button',
} = Astro.props;

// Definimos los estilos base
const baseStyles =
  'inline-flex items-center justify-center font-bold tracking-widest uppercase transition-all duration-300 rounded-full focus:outline-none focus:ring-2 focus:ring-pink-300 focus:ring-offset-2';

// Variantes de color
const variants = {
  primary: 'bg-glam-navy text-white hover:bg-pink-500 hover:shadow-lg hover:-translate-y-1',
  secondary: 'bg-pink-100 text-glam-navy hover:bg-pink-200',
  outline: 'border-2 border-glam-navy text-glam-navy hover:bg-glam-navy hover:text-white',
};

// Variantes de tamaño (Esto es lo que faltaba)
const sizes = {
  sm: 'px-4 py-2 text-xs', // Pequeño (para el header)
  md: 'px-6 py-3 text-sm', // Mediano (estándar)
  lg: 'px-8 py-4 text-base', // Grande (para portadas)
};

const finalClass = `${baseStyles} ${variants[variant]} ${sizes[size]} ${className}`;
---

{
  href ? (
    <a href={href} class={finalClass}>
      <slot />
    </a>
  ) : (
    <button type={type} class={finalClass}>
      <slot />
    </button>
  )
}
