---
// src/components/organisms/Footer.astro
import { siteData } from '../../data/siteData';

const { info, social, schedule, navigation } = siteData;
const currentYear = new Date().getFullYear();
---

<footer class="border-t-4 border-pink-400 bg-glam-dark pb-8 pt-16 text-white">
  <div class="container mx-auto px-6">
    <div class="mb-12 grid grid-cols-1 gap-12 md:grid-cols-3">
      {/* COLUMNA 1: MARCA, DESCRIPCIÓN Y PAGOS */}
      <div class="space-y-6">
        <div>
          <div class="relative inline-block">
            <h2 class="font-serif text-3xl font-bold leading-none tracking-widest text-pink-200">{info.title.toUpperCase()}</h2>
            <p
              class="absolute -bottom-4 right-0 rotate-[-2deg] font-serif text-sm italic text-pink-400/90"
            >
              By {info.author}
            </p>
          </div>
          <p class="pt-4 text-xs font-semibold uppercase tracking-[0.2em] text-gray-500">
            {info.lema}
          </p>
        </div>

        {/* Descripción */}
        <p class="max-w-xs text-sm leading-relaxed text-gray-400">{info.description}</p>

        {/* --- SECCIÓN DE PAGOS CORREGIDA (LOGOS MÁS GRANDES) --- */}
        <div class="border-t border-gray-800 pt-6">
          <p class="mb-3 text-[10px] font-semibold uppercase tracking-widest text-gray-500">
            Pagá como quieras
          </p>

          <div class="flex flex-wrap items-center gap-2">
            {/* 1. Efectivo (Agrandado) */}
            <div
              class="flex h-9 items-center justify-center rounded bg-white px-3 opacity-90 transition-opacity hover:opacity-100"
              title="Efectivo"
            >
              <span class="flex items-center gap-1 text-xs font-bold text-green-700">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  ><rect width="20" height="12" x="2" y="6" rx="2"></rect><circle
                    cx="12"
                    cy="12"
                    r="2"></circle><path d="M6 12h.01M18 12h.01"></path></svg
                >
                EFECTIVO
              </span>
            </div>

            {/* 2. Mercado Pago (Imagen más grande: h-6) */}
            <div
              class="flex h-9 items-center justify-center rounded bg-white px-2 opacity-90 transition-opacity hover:opacity-100"
            >
              <img
                src="/payments/mercadopago.svg"
                alt="Mercado Pago"
                class="h-6 w-auto object-contain"
                loading="lazy"
              />
            </div>

            {/* 3. Visa (Menos padding lateral, imagen más grande) */}
            <div
              class="flex h-9 items-center justify-center rounded bg-white px-2 opacity-90 transition-opacity hover:opacity-100"
            >
              <img
                src="/payments/visa.svg"
                alt="Visa"
                class="h-5 w-auto object-contain"
                loading="lazy"
              />
            </div>

            {/* 4. Mastercard */}
            <div
              class="flex h-9 items-center justify-center rounded bg-white px-2 opacity-90 transition-opacity hover:opacity-100"
            >
              <img
                src="/payments/mastercard.svg"
                alt="Mastercard"
                class="h-7 w-auto object-contain"
                loading="lazy"
              />
            </div>

            {/* 5. American Express */}
            <div
              class="flex h-9 items-center justify-center rounded bg-white px-2 opacity-90 transition-opacity hover:opacity-100"
            >
              <img
                src="/payments/amex.svg"
                alt="American Express"
                class="h-6 w-auto object-contain"
                loading="lazy"
              />
            </div>

            {/* 6. Naranja X */}
            <div
              class="flex h-9 items-center justify-center rounded bg-white px-2 opacity-90 transition-opacity hover:opacity-100"
            >
              <img
                src="/payments/naranja-x.svg"
                alt="Naranja X"
                class="h-6 w-auto object-contain"
                loading="lazy"
              />
            </div>
          </div>

          <p class="mt-2 text-[10px] italic text-gray-500">
            * 3 Cuotas sin interés en mas de $100.000
          </p>
        </div>
      </div>

      {/* COLUMNA 2: EXPLORAR */}
      <div>
        <h3 class="mb-6 font-serif text-xl text-pink-200">Explorar</h3>
        <ul class="space-y-3">
          {
            navigation.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-sm uppercase tracking-wider text-gray-400 transition-colors hover:text-pink-300"
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* COLUMNA 3: VISÍTANOS + REDES (INTACTA) */}
      <div>
        <h3 class="mb-6 font-serif text-xl text-pink-200">Visítanos</h3>
        <ul class="space-y-4 text-sm text-gray-400">
          <li class="flex flex-col gap-1">
            <span class="font-semibold text-white">Ubicación:</span>
            <a
              href={info.mapUrl}
              target="_blank"
              class="underline decoration-dotted hover:text-pink-300"
            >
              {info.address}
            </a>
          </li>

          <li class="flex flex-col gap-2">
            <span class="font-semibold text-white">Horarios:</span>
            {
              schedule.map((item) => (
                <div class="flex justify-between border-b border-gray-700 pb-1">
                  <span>{item.day}</span>
                  <span class="text-pink-100/80">{item.hours}</span>
                </div>
              ))
            }
          </li>

          <li class="pt-4">
            <span class="mb-2 block font-semibold text-white">Síguenos:</span>
            <div class="flex gap-3">
              <a
                href={social.instagram}
                target="_blank"
                class="rounded-full bg-pink-900/30 p-2 text-white transition-colors hover:bg-pink-600"
                aria-label="Instagram"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  ><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path
                    d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line
                    x1="17.5"
                    y1="6.5"
                    x2="17.51"
                    y2="6.5"></line></svg
                >
              </a>
              <a
                href={social.facebook}
                target="_blank"
                class="rounded-full bg-blue-900/30 p-2 text-white transition-colors hover:bg-blue-600"
                aria-label="Facebook"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  ><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
                  ></path></svg
                >
              </a>
            </div>
          </li>
        </ul>
      </div>
    </div>

    {/* COPYRIGHT */}
    <div
      class="flex flex-col items-center justify-between gap-4 border-t border-gray-800 pt-8 text-xs text-gray-600 md:flex-row"
    >
      <div class="flex flex-col items-center gap-2 md:flex-row md:gap-6">
        <p>&copy; {currentYear} {info.title}. Todos los derechos reservados.</p>
        {/* ENLACE NUEVO A LA POLÍTICA */}
        <a
          href="/politica-de-privacidad"
          class="underline decoration-dotted transition-colors hover:text-pink-300"
        >
          Política de Privacidad
        </a>
      </div>

      <p class="flex items-center gap-1">
        <span class="opacity-80">Sitio certificado por</span>
        <a
          href={info.devUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="ml-1 font-bold uppercase tracking-wider text-pink-300 transition-colors hover:text-pink-100"
          >{info.dev}</a
        >
      </p>
    </div>
  </div>
</footer>
